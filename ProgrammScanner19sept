import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in); //längst upp i koden, data kommer IN i systemet

        System.out.println("Hey what is your name?"); //för utmatning av data

        String name = scanner.next(); //för data inmatning från terminalen

        System.out.println("Hey " + name);

        System.out.println(name + " is a beautiful name");

        System.out.println("What is your address?");

        String address = scanner.next();

        System.out.println("What is your phone number?");

        int number = scanner.nextInt();

        System.out.println("Name: " + name);
        System.out.println("Address: " + address);
        System.out.println("Phone number: " + number);

    }
}
